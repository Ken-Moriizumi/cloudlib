<%- model_class = RentalHistory -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>book:</strong></dt>
  <dd><%= @rental_history.book.title %></dd>
  <dt><strong>User:</strong></dt>
  <dd><%= @rental_history.employee.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:borrow_date) %>:</strong></dt>
  <dd><%= @rental_history.borrow_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:return_date) %>:</strong></dt>
  <dd><%= @rental_history.return_date %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              rental_histories_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rental_history_path(@rental_history), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rental_history_path(@rental_history),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
